<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document Submission</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .modal-content {
            background-color: white;
            margin-top: 20px;
            padding: 20px;
            border-radius: 10px;
            margin: 0 auto; /* Centers the form */
            width: 850px;
            max-width: 90%;
            box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.4);
        }
        .close {
            float: right;
            font-size: 24px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="modal-content">
        <span class="close" onclick="window.history.back()">&times;</span>
        <h2>Document Submission</h2>
        <form action="/documentsInfo/submitDocumentsInfo" method="POST" enctype="multipart/form-data">
            <!-- Role Selection -->
            <div class="form-group">
                <label for="role">Role</label>
                <select class="form-control" name="role" id="role" required>
                    <option value="">Select Role</option>
                    <option value="User">User</option>
                    <option value="Maid">Maid</option>
                </select>
            </div>

            <div class="form-group">
                <label for="aadharNumber">Aadhar Card Number</label>
                <input type="text" class="form-control" name="aadharNumber" placeholder="Enter Aadhar card number">
            </div>
            <div class="form-group">
                <label for="aadharUpload">Upload Aadhar Card</label>
                <input type="file" class="form-control-file" name="aadharUpload">
            </div>

            <div class="form-group">
                <label for="rationCardNumber">Ration Card Number</label>
                <input type="text" class="form-control" name="rationCardNumber" placeholder="Enter Ration card number">
            </div>
            <div class="form-group">
                <label for="rationUpload">Upload Ration Card</label>
                <input type="file" class="form-control-file" name="rationUpload">
            </div>

            <div class="form-group">
                <label for="accountNumber">Bank Account Number</label>
                <input type="text" class="form-control" name="accountNumber" placeholder="Enter bank account number">
            </div>
            <div class="form-group">
                <label for="passbookUpload">Upload Bank Passbook</label>
                <input type="file" class="form-control-file" name="passbookUpload">
            </div>

            <div class="form-group">
                <label for="panNumber">PAN Card Number</label>
                <input type="text" class="form-control" name="panNumber" placeholder="Enter PAN card number">
            </div>
            <div class="form-group">
                <label for="panUpload">Upload PAN Card</label>
                <input type="file" class="form-control-file" name="panUpload">
            </div>

            <div class="form-group">
                <label for="voterId">Voter ID Number</label>
                <input type="text" class="form-control" name="voterId" placeholder="Enter Voter ID number">
            </div>
            <div class="form-group">
                <label for="voterIdUpload">Upload Voter ID</label>
                <input type="file" class="form-control-file" name="voterIdUpload">
            </div>

            <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </form>
    </div>
</body>
</html>
