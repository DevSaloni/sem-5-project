<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Find a Maid</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }
        .modal-content {
            background-color: white;
            padding: 20px;
            border-radius: 10px;
            margin: 40px auto;
            width: 850px;
            max-width: 90%;
            box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.4);
        }
        .close {
            float: right;
            font-size: 24px;
            cursor: pointer;
            color: #000;
        }
        .close:hover {
            color: #dc3545;
        }
        label {
            font-weight: bold;
        }
        button {
            width: 100%;
            padding: 12px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
        }
        button:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <div class="modal-content">
        <span class="close" onclick="window.history.back()">&times;</span>
        <h2 class="text-center">Apply For Job</h2>
        <form action="/apply-job" method="POST">
            <!-- Full Name -->
            <div class="form-group">
                <label for="full-name">Full Name</label>
                <input type="text" id="full-name" name="fullName" class="form-control" placeholder="Enter your full name" required>
            </div>

            <!-- Service Type -->
            <div class="form-group">
                <label for="service-type">Service Type</label>
                <select id="service-type" name="serviceType" class="form-control" required>
                    <option value="">Select a service</option>
                    <option value="house_cleaning">House Cleaning</option>
                    <option value="child_care">Child Care</option>
                    <option value="cooking">Cooking</option>
                    <option value="elderly_care">Elderly Care</option>
                </select>
            </div>

            <!-- Location -->
            <div class="form-group">
                <label for="location">Location / ZIP Code</label>
                <input type="text" id="location" name="location" class="form-control" placeholder="Enter location or ZIP" required>
            </div>

            <!-- Experience Level -->
            <div class="form-group">
                <label for="experience">Experience Level</label>
                <select id="experience" name="experience" class="form-control" required>
                    <option value="">Select experience level</option>
                    <option value="1">Beginner</option>
                    <option value="2">Intermediate</option>
                    <option value="3">Experienced</option>
                </select>
            </div>

            <!-- Availability -->
            <div class="form-group">
                <label for="date">Availability Date</label>
                <input type="date" id="date" name="availability" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="time">Availability Time</label>
                <input type="time" id="time" name="availabilityTime" class="form-control" required>
            </div>

            <!-- Budget Range -->
            <div class="form-group">
                <label for="budget">Budget Range (per hour)</label>
                <div class="d-flex justify-content-between">
                    <input type="number" id="budget-min" name="budgetMin" class="form-control" placeholder="Min" min="0" required style="width: 48%;">
                    <input type="number" id="budget-max" name="budgetMax" class="form-control" placeholder="Max" min="0" required style="width: 48%;">
                </div>
            </div>

            <!-- Rating -->
            <div class="form-group">
                <label for="rating">Minimum Rating</label>
                <select id="rating" name="rating" class="form-control" required>
                    <option value="">Select rating</option>
                    <option value="1">1 Star & Above</option>
                    <option value="2">2 Stars & Above</option>
                    <option value="3">3 Stars & Above</option>
                    <option value="4">4 Stars & Above</option>
                    <option value="5">5 Stars</option>
                </select>
            </div>

            <!-- Submit Button -->
            <button type="submit">Submit</button>
        </form>
    </div>
</body>
</html>
