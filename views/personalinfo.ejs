<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Modal Styling */
        .modal-content {
            background-color: white;
            margin-top: 20px;
            margin-left: 80px;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.4);
        }

        /* Form Styling */
        .form-container {
            max-width: 850px; /* Adjust the width here */
            margin: 0 auto; /* Centers the form */
            padding: 20px;
            background-color: #f9f9f9;
            border-radius: 10px;
            margin-top: 30px;
            box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.2);
        }

        /* Input fields */
        .form-control {
            font-size: 14px;
        }

        button {
            font-size: 16px;
        }
    </style>
</head>
<body>
    <div class="form-container">
        <form action="/personalInfo/submitPersonalInfo" method="post">
            <!-- Personal Information Section -->
            <div class="form-section">
                <div class="form-row align-items-center">
                    <div class="col-md-4">
                        <label for="fullName">Full Name</label>
                    </div>
                    <div class="col-md-8">
                        <input type="text" class="form-control" id="fullName" name="fullName" placeholder="Enter your full name" required>
                    </div>
                </div>
                <div class="form-row align-items-center mt-3">
                    <div class="col-md-4">
                        <label for="dob">Date of Birth</label>
                    </div>
                    <div class="col-md-8">
                        <input type="date" class="form-control" id="dob" name="dob" required>
                    </div>
                </div>
                <div class="form-row align-items-center mt-3">
                    <div class="col-md-4">
                        <label for="gender">Gender</label>
                    </div>
                    <div class="col-md-8">
                        <select class="form-control" id="gender" name="gender" required>
                            <option>Male</option>
                            <option>Female</option>
                            <option>Other</option>
                        </select>
                    </div>
                </div>
                <!-- Role Field -->
                <div class="form-row align-items-center mt-3">
                    <div class="col-md-4">
                        <label for="role">Role</label>
                    </div>
                    <div class="col-md-8">
                        <select class="form-control" id="role" name="role" required>
                            <option value="">Select Role</option>
                            <option value="User">User</option>
                            <option value="Maid">Maid</option>
                        </select>
                        
                    </div>
                </div>
            </div>

            <!-- Contact Information Section -->
            <div class="form-section mt-4">
                <h4>Contact Information</h4>
                <div class="form-row align-items-center">
                    <div class="col-md-4">
                        <label for="email">Email</label>
                    </div>
                    <div class="col-md-8">
                        <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" required>
                    </div>
                </div>
                <div class="form-row align-items-center mt-3">
                    <div class="col-md-4">
                        <label for="phone">Phone Number</label>
                    </div>
                    <div class="col-md-8">
                        <input type="tel" class="form-control" id="phone" name="phone" placeholder="Enter your phone number" required>
                    </div>
                </div>
            </div>

            <!-- Address Details Section -->
            <div class="form-section mt-4">
                <h4>Address Details</h4>
                <div class="form-row align-items-center">
                    <div class="col-md-4">
                        <label for="correspondenceAddress">Correspondence Address</label>
                    </div>
                    <div class="col-md-8">
                        <textarea class="form-control" id="correspondenceAddress" name="correspondenceAddress" rows="2" placeholder="Enter correspondence address" required></textarea>
                    </div>
                </div>
                <div class="form-row align-items-center mt-3">
                    <div class="col-md-4">
                        <label for="permanentAddress">Permanent Address</label>
                    </div>
                    <div class="col-md-8">
                        <textarea class="form-control" id="permanentAddress" name="permanentAddress" rows="2" placeholder="Enter permanent address" required></textarea>
                    </div>
                </div>
                <div class="form-row align-items-center mt-3">
                    <div class="col-md-4">
                        <label for="district">District</label>
                    </div>
                    <div class="col-md-8">
                        <input type="text" class="form-control" id="district" name="district" placeholder="Enter your district" required>
                    </div>
                </div>
                <div class="form-row align-items-center mt-3">
                    <div class="col-md-4">
                        <label for="taluka">Taluka</label>
                    </div>
                    <div class="col-md-8">
                        <input type="text" class="form-control" id="taluka" name="taluka" placeholder="Enter your taluka" required>
                    </div>
                </div>
                <div class="form-row align-items-center mt-3">
                    <div class="col-md-4">
                        <label for="zipcode">Zip Code</label>
                    </div>
                    <div class="col-md-8">
                        <input type="text" class="form-control" id="zipcode" name="zipcode" placeholder="Enter your zip code" required>
                    </div>
                </div>
            </div>

            <!-- Payment Details Section -->
            <div class="form-section mt-4">
                <h4>Payment Details</h4>
                <div class="form-row align-items-center">
                    <div class="col-md-4">
                        <label for="cardNumber">Card Number</label>
                    </div>
                    <div class="col-md-8">
                        <input type="text" class="form-control" id="cardNumber" name="cardNumber" placeholder="Enter your card number" required>
                    </div>
                </div>
                <div class="form-row align-items-center mt-3">
                    <div class="col-md-4">
                        <label for="expiryDate">Expiry Date</label>
                    </div>
                    <div class="col-md-4">
                        <input type="text" class="form-control" id="expiryDate" name="expiryDate" placeholder="MM/YY" required>
                    </div>
                    <div class="col-md-4">
                        <label for="cvv">CVV</label>
                        <input type="text" class="form-control" id="cvv" name="cvv" placeholder="CVV" required>
                    </div>
                </div>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary btn-block mt-4">Submit</button>
        </form>
    </div>
</body>
</html>
